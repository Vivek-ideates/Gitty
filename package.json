{
  "name": "gitty",
  "displayName": "gitty",
  "description": "",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.108.1"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onCommand:gitty.openCoach",
    "onCommand:gitty.refreshRepoContext",
    "onCommand:gitty.voiceStart",
    "onCommand:gitty.voiceStop",
    "onCommand:gitty.setElevenLabsApiKey",
    "onCommand:gitty.groqPing",
    "onCommand:gitty.executeLastPlan",
    "onCommand:gitty.planAndExecuteFromTranscript",
    "onCommand:gitty.routeFromTranscript",
    "onCommand:gitty.answerLearningQuestion"
  ],
  "main": "./dist/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "gitty.answerLearningQuestion",
        "title": "Gitty: Answer Learning Question (Groq)"
      },
      {
        "command": "gitty.routeFromTranscript",
        "title": "Gitty: Route From Last Transcript (Groq)"
      },
      {
        "command": "gitty.setElevenLabsApiKey",
        "title": "Gitty: Set ElevenLabs API Key"
      },
      {
        "command": "gitty.planAndExecuteFromTranscript",
        "title": "Gitty: Plan + Execute From Last Transcript (Groq)"
      },
      {
        "command": "gitty.executeLastPlan",
        "title": "Gitty: Execute Last Plan (Verified)"
      },
      {
        "command": "gitty.groqPing",
        "title": "Gitty: Groq Ping"
      },
      {
        "command": "gitty.openCoach",
        "title": "Gitty: Open Coach"
      },
      {
        "command": "gitty.refreshRepoContext",
        "title": "Gitty: Refresh Repo Context"
      },
      {
        "command": "gitty.voiceStart",
        "title": "Gitty: Start Voice (Wake Listening)"
      },
      {
        "command": "gitty.voiceStop",
        "title": "Gitty: Stop Voice"
      }
    ],
    "configuration": {
      "title": "Gitty",
      "properties": {
        "gitty.voice.enabled": {
          "type": "boolean",
          "default": false,
          "description": "Enable Gitty voice features (wake word + STT)."
        },
        "gitty.voice.wakeWord": {
          "type": "string",
          "default": "Hey Gitty",
          "description": "Wake word phrase (informational; Porcupine keyword is configured separately)."
        },
        "gitty.picovoice.accessKey": {
          "type": "string",
          "default": "",
          "description": "Picovoice AccessKey for Porcupine wake word detection."
        },
        "gitty.picovoice.keyword": {
          "type": "string",
          "default": "hey-gitty",
          "description": "Porcupine keyword model name/identifier to use (implementation will map this later)."
        },
        "gitty.picovoice.sensitivity": {
          "type": "number",
          "default": 0.6,
          "minimum": 0,
          "maximum": 1,
          "description": "Wake word sensitivity (0-1)."
        },
        "gitty.vosk.enabled": {
          "type": "boolean",
          "default": false,
          "description": "Enable Vosk speech-to-text (local)."
        },
        "gitty.groq.enabled": {
          "type": "boolean",
          "default": false,
          "description": "Enable Groq LLM command planning."
        },
        "gitty.groq.apiKey": {
          "type": "string",
          "default": "",
          "description": "Groq API key (placeholder)."
        },
        "gitty.groq.model": {
          "type": "string",
          "default": "",
          "description": "Groq model name (placeholder)."
        },
        "gitty.elevenlabs.enabled": {
          "type": "boolean",
          "default": false,
          "description": "Enable ElevenLabs TTS."
        },
        "gitty.elevenlabs.voiceId": {
          "type": "string",
          "default": "",
          "description": "ElevenLabs Voice ID."
        },
        "gitty.elevenlabs.modelId": {
          "type": "string",
          "default": "eleven_turbo_v2_5",
          "description": "ElevenLabs Model ID (default: eleven_turbo_v2_5)."
        },
        "gitty.elevenlabs.outputFormat": {
          "type": "string",
          "default": "mp3_22050_32",
          "description": "ElevenLabs Output Format (default: mp3_22050_32)."
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run package",
    "compile": "npm run check-types && npm run lint && node esbuild.js",
    "watch": "npm-run-all -p watch:*",
    "watch:esbuild": "node esbuild.js --watch",
    "watch:tsc": "tsc --noEmit --watch --project tsconfig.json",
    "package": "npm run check-types && npm run lint && node esbuild.js --production",
    "compile-tests": "tsc -p . --outDir out",
    "watch-tests": "tsc -p . -w --outDir out",
    "pretest": "npm run compile-tests && npm run compile && npm run lint",
    "check-types": "tsc --noEmit",
    "lint": "eslint src",
    "test": "vscode-test"
  },
  "devDependencies": {
    "@types/mocha": "^10.0.10",
    "@types/node": "22.x",
    "@types/vscode": "^1.108.1",
    "@vscode/test-cli": "^0.0.12",
    "@vscode/test-electron": "^2.5.2",
    "esbuild": "^0.27.2",
    "eslint": "^9.39.2",
    "npm-run-all": "^4.1.5",
    "typescript": "^5.9.3",
    "typescript-eslint": "^8.52.0"
  },
  "dependencies": {
    "@picovoice/porcupine-node": "^4.0.1",
    "@picovoice/pvrecorder-node": "^1.2.8"
  }
}
