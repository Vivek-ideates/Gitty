{
  "name": "gitty",
  "displayName": "gitty",
  "description": "",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.108.1"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onCommand:gitty.openCoach",
    "onCommand:gitty.toggleListening",
    "onCommand:gitty.spawnTerminal",
    "onCommand:gitty.sendTextToTerminal",
    "onCommand:gitty.debugRunGitStatus",
    "onCommand:gitty.runCommandVerified",
    "onCommand:gitty.runLastCommandAgain",
    "onCommand:gitty.refreshRepoContext",
    "onCommand:gitty.voiceStart",
    "onCommand:gitty.voiceStop",
    "onCommand:gitty.simulateWakeWord"
  ],
  "main": "./dist/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "gitty.openCoach",
        "title": "Gitty: Open Coach"
      },
      {
        "command": "gitty.toggleListening",
        "title": "Gitty: Toggle Listening"
      },
      {
        "command": "gitty.spawnTerminal",
        "title": "Gitty: Spawn Terminal"
      },
      {
        "command": "gitty.sendTextToTerminal",
        "title": "Gitty: Send Text to Terminal"
      },
      {
        "command": "gitty.debugRunGitStatus",
        "title": "Gitty: Debug Run (git status)"
      },
      {
        "command": "gitty.runCommandVerified",
        "title": "Gitty: Run Command (Verified)"
      },
      {
        "command": "gitty.runLastCommandAgain",
        "title": "Gitty: Run Last Command Again (Verified)"
      },
      {
        "command": "gitty.refreshRepoContext",
        "title": "Gitty: Refresh Repo Context"
      },
      {
        "command": "gitty.voiceStart",
        "title": "Gitty: Start Voice (Wake Listening)"
      },
      {
        "command": "gitty.voiceStop",
        "title": "Gitty: Stop Voice"
      },
      {
        "command": "gitty.simulateWakeWord",
        "title": "Gitty: Simulate Wake Word"
      }
    ]
  },
  "scripts": {
    "vscode:prepublish": "npm run package",
    "compile": "npm run check-types && npm run lint && node esbuild.js",
    "watch": "npm-run-all -p watch:*",
    "watch:esbuild": "node esbuild.js --watch",
    "watch:tsc": "tsc --noEmit --watch --project tsconfig.json",
    "package": "npm run check-types && npm run lint && node esbuild.js --production",
    "compile-tests": "tsc -p . --outDir out",
    "watch-tests": "tsc -p . -w --outDir out",
    "pretest": "npm run compile-tests && npm run compile && npm run lint",
    "check-types": "tsc --noEmit",
    "lint": "eslint src",
    "test": "vscode-test"
  },
  "devDependencies": {
    "@types/vscode": "^1.108.1",
    "@types/mocha": "^10.0.10",
    "@types/node": "22.x",
    "typescript-eslint": "^8.52.0",
    "eslint": "^9.39.2",
    "esbuild": "^0.27.2",
    "npm-run-all": "^4.1.5",
    "typescript": "^5.9.3",
    "@vscode/test-cli": "^0.0.12",
    "@vscode/test-electron": "^2.5.2"
  }
}
